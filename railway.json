{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "python simple_main.py",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "environments": {
    "production": {
      "variables": {
        "ENVIRONMENT": "production",
        "DEBUG": "false",
        "HOST": "0.0.0.0",
        "PORT": "$PORT",
        "WORKERS": "4"
      }
    }
  },
  "regions": ["us-west1"],
  "services": [
    {
      "name": "medical-platform",
      "plan": "hobby",
      "autoDeploy": true,
      "source": {
        "type": "github",
        "repo": "medical-knowledge-platform"
      }
    },
    {
      "name": "postgres",
      "plan": "hobby",
      "image": "postgres:15",
      "variables": {
        "POSTGRES_DB": "medical_platform",
        "POSTGRES_USER": "medical_user",
        "POSTGRES_PASSWORD": "$POSTGRES_PASSWORD"
      },
      "volumes": [
        {
          "name": "postgres-data",
          "mountPath": "/var/lib/postgresql/data"
        }
      ]
    },
    {
      "name": "redis",
      "plan": "hobby",
      "image": "redis:7-alpine",
      "volumes": [
        {
          "name": "redis-data",
          "mountPath": "/data"
        }
      ]
    }
  ],
  "plugins": [
    {
      "name": "postgresql",
      "plan": "hobby"
    },
    {
      "name": "redis",
      "plan": "hobby"
    }
  ]
}